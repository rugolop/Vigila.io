# =============================================================================
# Vigila.io - Producción (Dokploy)
# =============================================================================
# Estas variables se configuran en Dokploy, este archivo es de referencia

NODE_ENV=production
ENVIRONMENT=production

# Base de Datos (usar servicio postgres de Dokploy)
POSTGRES_USER=vigila_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=vigila_prod
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_URL_AUTH=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# Frontend - Cambiar por tu dominio de producción
NEXT_PUBLIC_API_URL=https://api.vigila.tudominio.com
BETTER_AUTH_URL=https://vigila.tudominio.com
BETTER_AUTH_SECRET=${BETTER_AUTH_SECRET}

# MediaMTX
MEDIAMTX_API_URL=http://mediamtx:9997

# Grabaciones
RECORDINGS_PATH=/recordings

# Seguridad
CORS_ORIGINS=https://vigila.tudominio.com
